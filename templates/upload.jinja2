<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />

    <title>Upload Data</title>
    <style>
        .wrapper {
            padding: 2px;
        }

        .filter-padding {
            padding: 4px;
            border: 1px solid lightgray;
            box-shadow: inset 1px 1px 1px #000000
        }

        .padding-20 {
            padding: 20px;
        }
    </style>
</head>

<body>
    <div class="row">
        <div class="container-fluid">
            <div class="col-md-11">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link " href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/upload">Upload</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-fluid">
            <div class="col-md-11">
                <div class="widget filter-padding">
                    {% if message%}
                    <h3>{{ message }}</h3>
                    {% else %}
                    <div style="padding: 1.5rem;margin-right: 0;margin-left: 0;border-width: .2rem;">
                        <form action="/upload" method="POST" enctype="multipart/form-data">
                            <div class="form-group">
                                <label for="google_drive_upload">Google Drive Link</label>
                                <input type="text" class="form-control" id="google_drive_upload"
                                    placeholder="Paste link to Google Drive">
                            </div>
                            <div class="form-group">
                                <label for="local_file_upload">Example file input</label>
                                <input type="file" class="form-control-file" id="local_file_upload"
                                    accept=".csv, text/plain" name="local_file_upload"
                                    placeholder="select a CSV file to upload">
                            </div>
                            <button name="submit" class="btn btn-primary" type="submit">Upload Data</button>
                            <button name="clear_data" class="btn btn-danger" value="true">Clear Data</button>
                        </form>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</body>

</html>