<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=yes">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.22/css/jquery.dataTables.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/buttons/1.6.5/css/buttons.dataTables.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />

    <title>Upload Data</title>
</head>

<body>
    <div class="row">
        <div class="container-fluid">
            <div class="col-md-11">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link " href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/upload">Upload</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="container-fluid">
            <div class="col-md-11">
                <div class="widget filter-padding">
                    <form action="/upload" method="POST" enctype="multipart/form-data">
                        <fieldset>
                            <button name="clear" value="true">Clear Data</button>
                        </fieldset>
                        <fieldset>
                            <legend>
                                <div>
                                    <label for="google_drive_upload">Google Drive Link</label>
                                    <input id="google_drive_upload" type="text" name="google_drive_upload" />
                                </div>
                                <div>
                                    <label for="local_file_upload">Local File</label>
                                    <input id="local_file_upload" type="file" accept=".csv, text/plain"" name="
                                        local_file_upload" />
                                </div>
                            </legend>
                        </fieldset>
                        <button name="submit" type="submit">Upload Data</button>
                    </form>
                </div>
            </div>

        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
</body>

</html>